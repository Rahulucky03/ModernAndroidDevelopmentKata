<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorError">@android:color/holo_red_dark</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="android:textViewStyle">@style/GlobalTextViewStyle</item>
    <item name="materialButtonStyle">@style/GlobalMaterialButtonStyle</item>
    <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
  </style>

  <!-- Splash Activity theme. -->
  <style name="SplashTheme" parent="AppTheme"/>

</resources>